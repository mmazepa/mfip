<% include ../partials/header %>

    <!-- main section -->
    <main id="mainContent">

      <div class="containter-fluid">
          <div class="row">

            <% include ../partials/menu %>

            <div class="col-sm-9">
                <h1 class="mainHeader">
                    Lista <span class="appTitle">Umiejętności</span>!
                </h1>
                <p style="text-align:center;">
                    <!-- LISTA UMIEJĘTNOŚCI -->
                    <table class="listTable">
                    <%
                        if (skills.length > 0) {
                    %>
                        <tr>
                            <th>L.P.</th>
                            <th>ID</th>
                            <th>Typ</th>
                            <th>Nazwa</th>
                            <th>Opis</th>
                            <th>Usuń</th>
                        </tr>
                    <%
                            for (s in skills)
                            {
                    %>
                                <tr>
                                    <td><%= parseInt(s)+1 %></td>
                                    <td><%= skills[s].id %></td>
                                    <td><%= skills[s].type %></td>
                                    <td><%= skills[s].name %></td>
                                    <td><%= skills[s].description %></td>
                                    <td>
                                        <button id="<%= skills[s].id %>"
                                                class="btn btn-danger"
                                                onclick="confirmDeletion(this.id)">
                                            <span class="glyphicon glyphicon-remove"></span>
                                        </button>
                                    </td>
                                </tr>
                    <%
                            }
                        } else {
                    %>
                            Brak Umiejętności.
                    <%
                        }
                    %>
                        <!-- fragment skryptu, tymczasowo na widoku -->
                        <script>
                            const confirmDeletion = (id) => {
                                const decision = confirm("Czy na pewno chcesz usunąć ten rekord?");
                                if (decision == true) location.replace("/skill/remove/" + id);
                            };
                        </script>
                    </table>
                    <div class="insertionBox">
                        <form action="/skill/add" method="POST">
                            <table>
                                <tr>
                                    <th>Typ</th>
                                    <th>Nazwa</th>
                                    <th>Opis</th>
                                </tr>
                                <tr>
                                    <td><input name="type" type="text"/></td>
                                    <td><input name="name" type="text"/></td>
                                    <td><input name="description" type="text"/></td>
                                    <td>
                                        <button class="btn btn-primary">
                                            <span class="glyphicon glyphicon-plus"></span>
                                        </button>
                                    </td>
                                </tr>
                            </table>
                        </form>
                    </div>
                </p>
            </div>
          </div>
      </div>
    </main>

    <% include ../partials/footer %>
  </body>
</html>
