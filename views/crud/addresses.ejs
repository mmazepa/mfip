<% include ../partials/header %>

    <!-- main section -->
    <main id="mainContent">

      <div class="containter-fluid">
          <div class="row">

            <% include ../partials/menu %>

            <div class="col-sm-9">
                <h1 class="mainHeader">
                    Lista <span class="appTitle">Adresów</span>!
                </h1>
                <p style="text-align:center;">
                    <!-- LISTA ADRESÓW -->
                    <table class="listTable">
                    <%
                        if (addresses.length > 0) {
                    %>
                        <tr>
                            <th>L.P.</th>
                            <th>Kraj</th>
                            <th>Miasto</th>
                            <th>Ulica</th>
                            <th>Nr domu</th>
                            <th>Kod pocztowy</th>
                            <th>Mapa</th>
                        </tr>
                    <%
                            for (a in addresses)
                            {
                    %>
                                <tr>
                                    <td><%= parseInt(a)+1 %></td>
                                    <td><%= addresses[a].country %></td>
                                    <td><%= addresses[a].city %></td>
                                    <td><%= addresses[a].street %></td>
                                    <td><%= addresses[a].house_number %></td>
                                    <td><%= addresses[a].zip_code %></td>
                                    <td>
                                        <div style="width: 100%">
                                            <iframe width="100%"
                                                    height="100px"
                                                    src="https://maps.google.com/maps?width=100%&amp;height=100&amp;hl=en&amp;q=<%= addresses[a].street %><%= addresses[a].city %><%= addresses[a].country%>+&amp;ie=UTF8&amp;t=h&amp;z=16&amp;iwloc=B&amp;output=embed"
                                                    frameborder="0"
                                                    scrolling="no"
                                                    marginheight="0"
                                                    marginwidth="0">
                                            </iframe>
                                        </div>
                                    </td>
                                </tr>
                    <%
                            }
                        } else {
                    %>
                            Brak Adresów.
                    <%
                        }
                    %>
                    </table>
                </p>
            </div>
          </div>
      </div>
    </main>

    <% include ../partials/footer %>
  </body>
</html>
