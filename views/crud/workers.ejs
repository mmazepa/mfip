<% include ../partials/header %>

    <!-- main section -->
    <main id="mainContent">

      <div class="containter-fluid">
          <div class="row">

            <% include ../partials/menu %>

            <div class="col-sm-9">
                <h1 class="mainHeader">
                    Lista <span class="appTitle">Pracowników</span>!
                </h1>
                <p style="text-align:center;">
                    <!-- LISTA PRACOWNIKÓW -->
                    <table class="listTable">
                    <%
                        if (employees.length > 0) {
                    %>
                        <tr>
                            <th>L.P.</th>
                            <th>Foto</th>
                            <th>Imię</th>
                            <th>Nazwisko</th>
                            <th>Data urodzenia</th>
                            <th>Numer telefonu</th>
                            <th>E-mail</th>
                            <th>Adres</th>
                        </tr>
                    <%
                            for (e in employees)
                            {
                    %>
                                <tr>
                                    <td><%= parseInt(e)+1 %></td>
                                    <td>
                                        <%
                                            if (employees[e].image != null) {
                                        %>
                                            <img    src="data:image/jpeg;base64,<%= employees[e].image %>"
                                                    width="50">
                                        <%
                                            } else {
                                        %>
                                            <img src="/images/unknown/unknown_employee.jpg" width="50">
                                        <%
                                            }
                                        %>
                                    </td>
                                    <td><%= employees[e].first_name %></td>
                                    <td><%= employees[e].last_name %></td>
                                    <td class="date"><%= employees[e].birth %></td>
                                    <td><%= employees[e].phone_number == 0 ? "" : employees[e].phone_number %></td>
                                    <td>
                                        <a href="mailto:<%= employees[e].email %>">
                                            <%= employees[e].email %>
                                        </a>
                                    </td>
                                    <td>
                                        <%=
                                            employees[e].street + " " +
                                            employees[e].house_number + ", " +
                                            employees[e].zip_code + " " +
                                            employees[e].city + ", " +
                                            employees[e].country;
                                        %>
                                    </td>
                                </tr>
                    <%
                            }
                        } else {
                    %>
                            Brak Pracowników.
                    <%
                        }
                    %>
                    </table>
                </p>
            </div>
          </div>
      </div>
    </main>

    <% include ../partials/footer %>
  </body>
</html>
